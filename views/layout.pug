doctype html
html
    head
        title Library
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    body
        .container-fluid
            nav(class="navbar navbar-expand-lg navbar-light bg-light")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                        a(href="/"  class="nav-link") home
                    if user
                        li(class="nav-item")
                            a(href="/books/add"  class="nav-link") add book
                    if !user
                        li(class="nav-item")
                            a(href="/users/register" class="nav-link") register
                        li(class="nav-item")
                            a(href="/users/login" class="nav-link") login
                    if user
                        li(class="nav-item")
                            a(href="/users/logout" class="nav-link ") logout
                        li(class="nav-item nav-link") Hello #{user.name}
                        if user.admin == true
                            li(class="nav-item nav-link") You have admin permissions
                    
        .container
            !=messages('message', locals)
            if errors
                div(class="alert alert-danger") Please fill every field
                    
            block content
            br
            hr
            footer
                p Copyright &copy; 2022 Maciej Mularski
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')  
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
        script(src="/main.js")